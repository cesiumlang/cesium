#pragma once

#include <string>

namespace cesium {
  namespace version {
    constexpr int MAJOR = @cesium_VERSION_MAJOR@;
    constexpr int MINOR = @cesium_VERSION_MINOR@;
    constexpr int PATCH = @cesium_VERSION_PATCH@;

    inline std::string getVersionString() {
      return std::to_string(MAJOR) + "." + std::to_string(MINOR) + "." + std::to_string(PATCH);
    }

    inline std::string getFullVersionInfo() {
      return "Cesium v" + getVersionString();
    }
  }
}
