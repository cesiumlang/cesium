{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "shiki": ["./docs/quartz_repo/node_modules/shiki"],
      "rehype-pretty-code": ["./docs/quartz_repo/node_modules/rehype-pretty-code"]
    }
  },
  "include": ["docs/**/*.ts", "docs/**/*.tsx"]
}
